<h2> PRODUCT REVIEW</h2>

<h3> <% product.name  %></h3>

<img src=" <%= product.imageUrl %>" width="50%">

<form method="post" action="/products/<%= product._id %>/reviews">
  <label for="content-input"> Content </label>
  <textarea id='content-input' name='reviewContent'></textarea>
  <br />

  <label for="starts-input"> Raiting (1-5)</label>
  <input id="starts-input" type="number" name="reviewStars" >
  <br>

  <label for="author-input"> Your Name</label>
  <input id="author-input" type="text" name="reviewAuthor" />
  <br>

  <button>Submit Review</button>
</from>
